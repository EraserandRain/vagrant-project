host_list = [
  {
    :name => "host1",
    :box => "ubuntu",
    :hostname => "host1"
  },
  {
    :name => "host2",
    :box => "ubuntu",
    :hostname => "host2"
  }
]
Vagrant.configure("2") do |config|
  host_list.each do |item|
    config.vm.define item[:name]  do |host|
      host.vm.box=item[:box]
      host.vm.hostname=item[:hostname]
    end
  end
end
