host_list = [
  {
    :name => "host1",
    :box => "base"
  },
  {
    :name => "host2",
    :box => "base"
  },
  {
    :name => "host2",
    :box => "base"
  }
]
Vagrant.configure("2") do |config|
  config.vm.box = "base"
  host_list.each do |item|
    config.vm.define item[:name]  do |host|
      host.vm.box=item[:box]
    end
  end
end
